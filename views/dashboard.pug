doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0, shrink-to-fit=no')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(href="https://fonts.googleapis.com/css?family=Exo+2" rel="stylesheet")
    script(src="/javascripts/script.js")
  body
    header
      a(href= '/dashboard' id='logo') JFTF
    main
      h1 Dashboard
      article
        h2 Blogs
        each blog in blog_list
          section 
            a(href='/dashboard/'+blog._id) #{blog.title} 
              span edited: #{blog.date}
        else
          p There are no blogs
        a(href='/dashboard/create') New Blog
    footer
      a(target='_blank' href='/') View Site
    
